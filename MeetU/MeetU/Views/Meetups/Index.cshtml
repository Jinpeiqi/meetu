@model IEnumerable<MeetU.Models.Meetup>

@{
    ViewBag.Title = "Meetups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" ng-app="meetu" ng-cloak>
    <br />
    <div class="col-md-1">
    </div>

    <div class="col-md-8" ng-controller="indexController">
        <div ng-repeat="meetup in meetups">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="btn-group btn-group-xs" role="group">
                        <button type="button" class="btn btn-info">{{ meetup.watches.length }}</button>
                        <button type="button" class="btn btn-success">{{ meetup.joins.length }}</button>
                    </div>
                </div>
                <div class="panel-body">
                    <span class="text-primary" href="#">
                        <a class="btn btn-toolbar btn-xs" href="" ng-click="showDetails = ! showDetails">
                            <span class="glyphicon glyphicon-menu-down" ng-show="! showDetails"></span>
                            <span class="glyphicon glyphicon-menu-up" ng-show="showDetails"></span>
                        </a>
                        &nbsp;&nbsp;&nbsp;{{ meetup.meetup.title }} by <span> {{ meetup.sponsorUserName }}</span>
                    </span>
                    <div ng-show="showDetails">
                        <hr />
                        <p class="jumbotron">
                            {{ meetup.meetup.description }}
                        </p>
                        <hr />
                        <a class="btn btn-info" ng-show="! isIn(meetup.watches)">
                            <span class="glyphicon glyphicon-eye-open"> Watch</span>
                        </a>
                        <a class="btn btn-info" ng-show="isIn(meetup.watches)">
                            <span class="glyphicon glyphicon-eye-close"> UnWatch</span>
                        </a>
                        <a class="btn btn-success" ng-show="! isIn(meetup.joins)">
                            <span class="glyphicon glyphicon-heart"> Join</span>
                        </a>
                        <a class="btn btn-success" ng-show="isIn(meetup.joins)">
                            <span class="glyphicon glyphicon-heart-empty"> UnJoin</span>
                        </a>




                        <hr />
                        <pre>{{ meetup | json }}</pre>



                    </div>
                </div>
            </div>
        </div>

        @*for testing*@
        <pre>{{ meetups | json }}</pre>
        <hr />
        <pre>{{ user }}</pre>
        <a class="btn btn-danger" ng-click="test()">Testing Angular</a>
        @*for testing*@


    </div>

    <div class="col-md-offset-3">
        <p>
            <a class="btn btn-success" href='@Url.Action("Create")'><span class="glyphicon glyphicon-plus"></span> New Meetup </a>
        </p>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/angular-resource.min.js")
    @Scripts.Render("~/Scripts/app.js")
}